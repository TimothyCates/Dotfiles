#! /bin/sh

#### AutoStart section
## Keybinds
    setxkbmap -v us
    sxhkd &
## Display
	~/.screenlayout/display.sh
	picom --experimental-backends -f &
	nitrogen --set-zoom-fill --random --head=0 $HOME/Pictures/Wallpapers
	nitrogen --set-zoom-fill --random --head=1 $HOME/Pictures/Wallpapers

## Cursor
	xsetroot -cursor_name left_ptr

## Monitor setup
	bspc monitor DP-5 -d  1 2 3 4
	bspc monitor HDMI-0 -d 5 6 7 8

## Polybar
    ~/.config/polybar/launch.sh &

#### BSPWM Configuration
	bspc config border_width         3
	bspc config window_gap          12

    bspc config normal_border_color \#363945
    bspc config active_border_color \#363945
    bspc config focused_border_color \#9471C1

    bspc config automatic_scheme longest_side

    bspc config split_ratio          0.52
    bspc config borderless_monocle   true
    bspc config gapless_monocle      true
